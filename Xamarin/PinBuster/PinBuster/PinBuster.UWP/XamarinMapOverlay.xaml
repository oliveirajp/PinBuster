<UserControl
    x:Class="PinBuster.UWP.XamarinMapOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Background="White" Opacity="1" Padding="20,0,20,0">
            <Image  x:Name="UserImage" Width="30" Height="30"  />
            <StackPanel Margin="20,10,20,0">
                <TextBlock x:Name="Label" FontWeight="Bold" />
                <TextBlock x:Name="Address" />
            </StackPanel>
            <Button Tapped="OnInfoButtonTapped" x:Name="InfoButton">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image Source="info.png" Width="24" />
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Tapped="OnInfoButtonTapped" Content="Edit" x:Name="EditButton"/>
        </StackPanel>
    </StackPanel>
</UserControl>
